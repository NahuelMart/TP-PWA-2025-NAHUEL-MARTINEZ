@{
    ViewData["Title"] = "Inicio";
    ViewData["Selected"] = ""; // No activamos ningún ítem de navbar
}

<div class="text-center mt-5">

    <!-- Logo -->
    <img src="~/img/Logo/Logo PE.png" alt="Logo PizzaExpress" class="img-fluid" style="max-width: 200px;" />

    <!-- Texto principal -->
    <h1 class="mt-4">¡Bienvenido a PizzaExpress!</h1>
    <p class="lead mt-3">Armá tu pizza personalizada eligiendo la masa e ingredientes a tu gusto.</p>

    <!-- Botón para empezar -->
    <a asp-controller="Pizza" asp-action="Index" class="btn btn-lg btn-warning mt-4">
        🍕 Empezar a armar mi pizza
    </a>


</div>
