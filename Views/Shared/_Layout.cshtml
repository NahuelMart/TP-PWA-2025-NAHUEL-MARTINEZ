<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaExpress</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PizzaExpress.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom text-light">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">PizzaExpress</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav flex-row justify-content-between w-100">

                        <!-- Izquierda: Otros pedidos -->
                        <li class="nav-item">
                            <a class="nav-link fw-bold @(ViewData["Selected"] as string == "Pedidos" ? "nav-selected" : "text-light")"
                               asp-controller="Pedidos" asp-action="Index">Otros pedidos</a>
                        </li>

                        <!-- Centro: Pizza -->
                        <li class="nav-item mx-auto">
                            <a class="nav-link fw-bold @(ViewData["Selected"] as string == "Pizza" ? "nav-selected" : "text-light")"
                               asp-controller="Pizza" asp-action="Index">Pizza</a>
                        </li>

                        <!-- Derecha: Usuario -->
                        <li class="nav-item ms-auto d-flex align-items-center">
                            <a class="nav-link fw-bold d-flex align-items-center @(ViewData["Selected"] as string == "Usuario" ? "nav-selected" : "text-light")"
                               asp-controller="Usuario" asp-action="Index">
                                <img src="~/img/Logo/usuario.png" alt="Usuario" width="30" height="30" class="rounded-circle me-2" />
                                Usuario
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PizzaExpress - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


